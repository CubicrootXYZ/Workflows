{
    "description": "Default Preset for Golang Applications",
    "extends": [
        "config:recommended",
        ":semanticCommits",
        "docker:pinDigests",
        ":automergePatch",
        ":docker",
        ":gomod",
        ":pinVersions"
    ],
    "postUpdateOptions": [
        "gomodTidy",
        "gomodUpdateImportPaths"
    ],
    "baseBranches": [
        "main"
    ],
    "rebaseWhen": "conflicted",
    "labels": [
        "dependencies"
    ],
    "packageRules": [
        {
            "matchManagers": [
                "gomod"
            ],
            "matchDepNames": [
                "go"
            ],
            "matchDepTypes": [
                "golang"
            ],
            "rangeStrategy": "bump"
        },
        {
            "matchManagers": [
                "gomod"
            ],
            "matchDepTypes": [
                "indirect"
            ],
            "enabled": true
        },
        {
            "groupName": "system libraries",
            "groupSlug": "sys-libs",
            "matchPackagePatterns": [
                "golang.org/.*"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ]
        },
        {
            "groupName": "database libraries",
            "groupSlug": "db-libs",
            "matchPackagePatterns": [
                ".*pgx.*",
                ".*gorm.*",
                ".*sql.*"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ]
        },
        {
            "groupName": "prometheus libraries",
            "groupSlug": "prom-libs",
            "matchPackagePatterns": [
                ".*prometheus.*"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ]
        },
        {
            "groupName": "tsting libraries",
            "groupSlug": "testing-libs",
            "matchPackagePatterns": [
                "github.com/stretchr/*",
                "github.com/golang/mock"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ]
        }
    ]
}